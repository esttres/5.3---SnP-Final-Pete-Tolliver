<article class="col-xs-8">

  <p id="notice"><%= notice %></p>

  <h1>Listing Posts</h1>

  <div>
    <% @posts.each do |post| %>

      <h3>Title</h3>
      <h4><%= post.title %></h4>

      <h3>Body</h3>
      <h4><%= post.body %></h4>

      <h3>Summary</h3>
      <h4><%= post.summary %></h4>

      <h3>Author</h3>
      <h4><%= post.author_id %></h4>

      <h3>Published</h3>
      <h4><%= post.published %></h4>

      <ul class="list-inline">
        <li><%= link_to 'Show', post %></li>
        <li><%= link_to 'Edit', edit_post_path(post) %></li>
        <li><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></li>
      </ul>

      <hr>

    <% end %>
  </div>

  <br>

  <%= link_to 'New Post', new_post_path %>

</article>
